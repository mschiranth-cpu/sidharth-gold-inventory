# =============================================================================
# Gold Factory Inventory - Frontend Development Dockerfile
# =============================================================================
# Development image with Vite HMR support
# =============================================================================

FROM node:20-alpine

# Install curl for health checks
RUN apk add --no-cache curl

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm install

# Expose ports
# 3000 - Vite dev server
# 24678 - Vite HMR WebSocket
EXPOSE 3000 24678

# Start Vite dev server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
