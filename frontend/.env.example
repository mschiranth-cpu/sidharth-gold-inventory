# ============================================
# GOLD INVENTORY SYSTEM - FRONTEND CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# Variables must be prefixed with VITE_ to be exposed to the client

# ============================================
# API CONFIGURATION
# ============================================
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=30000

# ============================================
# APP CONFIGURATION
# ============================================
VITE_APP_NAME=Gold Factory Inventory System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Gold Factory Inventory Tracking System

# ============================================
# AUTHENTICATION
# ============================================
VITE_AUTH_TOKEN_KEY=gold_inventory_token
VITE_AUTH_REFRESH_TOKEN_KEY=gold_inventory_refresh_token
VITE_AUTH_USER_KEY=gold_inventory_user

# ============================================
# PAGINATION DEFAULTS
# ============================================
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# ============================================
# FEATURE FLAGS
# ============================================
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false

# ============================================
# EXTERNAL SERVICES (optional)
# ============================================
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# ============================================
# GOLD PRICE DISPLAY
# ============================================
VITE_CURRENCY=INR
VITE_CURRENCY_SYMBOL=â‚¹
VITE_WEIGHT_UNIT=grams

# ============================================
# UI CONFIGURATION
# ============================================
VITE_TOAST_DURATION=4000
VITE_DATE_FORMAT=dd/MM/yyyy
VITE_TIME_FORMAT=HH:mm:ss
